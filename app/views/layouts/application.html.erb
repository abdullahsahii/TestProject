<!--            <button type="button" id="buton" class="btn btn-success rounded ml-2" id="add_button">+</button>-->
<!--          </div>-->
<!--          <button type="submit" class="btn btn-primary rounded" id="search_button">Search</button>-->
<!--        </div>-->
      <%# end %>


    </div>
  </div>
</nav>
<div style="background-color: #f5f5f5;">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
</div>

</body>
</html>
